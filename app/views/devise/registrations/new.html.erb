

<!--<%= render "devise/shared/links" %>-->
<div class="contact-bg overview-bgi">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <!-- Form content box start -->
                <div class="form-content-box">
                    <!-- details -->
                    <div class="details">
                        <h3>新規登録</h3>
                        <!-- Form start-->
                        <%= form_for(resource, as: resource_name, url: user_registration_path) do |f| %>
                        <%= devise_error_messages! %>
                            <div class="form-group">
                                <%= f.text_field :name, class: "input-text", placeholder:"ユーザーネーム" %>
                            </div>
                            <div class="form-group">
                                <%= f.email_field :email, class: "input-text", placeholder: "メールアドレス" %>
                            </div>
                            <div class="form-group">

                                <%= f.password_field :password, class: "input-text", placeholder: "パスワード" %>
                            </div>
                            <div class="form-group">
                                <%= f.password_field :password_confirmation, class: "input-text", placeholder: "パスワード確認" %>

                            </div>
                            <div class="mb-0">
                                <%= f.submit "サインアップ",class: "btn-md btn-theme btn-block" %>
                            </div>
                        <% end %>
                        <!-- Form end-->
                    </div>
                </div>
                <!-- Form content box end -->
            </div>
        </div>
    </div>
</div>
