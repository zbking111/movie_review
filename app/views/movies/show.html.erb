
			<main class="main-content">
				<div class="container">
					<div class="page">
						<div class="content">
							<div class="row">
								<div class="col-md-6">
									<figure class="movie-poster">
									<%= image_tag ( @movie.picture.url )%>
								</div>
								<div class="col-md-6">
									<h2 class="movie-title"><%= @movie.name %></h2>
									<div class="movie-summary">
										<p><%= @movie.info %></p>
									</div>
									<ul class="movie-meta">
										<li><strong>Rating:</strong> 
											<div class="star-rating" title="Rated 4.00 out of 5"><span style="width:80%"><strong class="rating">4.00</strong> out of 5</span></div>
										</li>
										<li><strong>Date:</strong> <%=(@movie.date)%></li>
									</ul>

									<ul class="starring">
										<li><strong>Movie character:</strong>
										<% @movie.actors.each do |actor| %>
											<span> <%= actor.name %></span>
										<% end %>
										</li>
									</ul>
								</div>
							</div> <!-- .row -->
